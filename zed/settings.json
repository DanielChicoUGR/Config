// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "icon_theme": "Colored Zed Icons Theme Light",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3.7-sonnet-thought"
    },
    "version": "2"
  },
  // "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": true,
    "normal_mode_readline_bindings": false,
    "scroll_viewport_with_cursor": true,
    // Comentar esta línea si prefieres el comportamiento estándar de vim
    "cursor_blink": false,
    "relative_line_numbers": true
  },
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark"
  },
  "languages": {
    "LaTeX": {

    },
    "C++": {

    }
  },
  "auto_update": true,
  "auto_update_channel": "stable",

  "format_on_save": "on",
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "use_autoclose": true,
  "git": {
    "git_gutter": null,
    "gutter_debounce": null,
    "inline_blame": null
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },

  "edit_predictions": {
    "disabled_globs": [
      "**/.env*",
      "**/*.pem",
      "**/*.key",
      "**/*.cert",
      "**/*.crt",
      "**/secrets.yml"
    ]
  },

  "buffer_font_fallbacks": ["Iosevka Nerd Font"],

  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },


}
